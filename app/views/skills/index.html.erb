<p id="notice"><%= notice %></p>

<h1>Skills</h1>
<%= link_to 'New Skill', new_skill_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rate</th>
      <th>Industry</th>
      <th>Total exp</th>
      <th>Is certify</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td>
          <div id="rateYo<%= skill.id%>"></div>
          <script type="text/javascript">
            $("#rateYo<%= skill.id%>").rateYo({rating: <%= skill.rate%>,halfStar: true, readOnly: true,Â starWidth: "30px"});
          </script>
        </td>
        <td><%= skill.industry %></td>
        <td><%= skill.total_exp %></td>
        <td><%= skill.is_certify %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

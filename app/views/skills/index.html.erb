<h1>Skills</h1>
<%= link_to 'Add Skill', "#", class: "btn btn-primary", id: "add_skill" %>

<div id="skill_form">
  <%= render 'form', skill: @skill %>  
</div>


<table class="table table-strip">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rate</th>
      <th>Industry</th>
      <th>Total exp</th>
      <th>Is certify</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr id="row-<%=skill.id%>">
        <td><%= skill.name %></td>
        <td>
          <div id="rateYo<%= skill.id%>"></div>
          <script type="text/javascript">
            $("#rateYo<%= skill.id%>").rateYo({rating: <%= skill.rate%>,halfStar: true, readOnly: true,Â starWidth: "30px"});
          </script>
        </td>
        <td><%= skill.industry %></td>
        <td><%= skill.total_exp %></td>
        <td><%= skill.is_certify %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill), remote: true %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
